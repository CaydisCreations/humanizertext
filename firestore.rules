rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporarily permissive rules for debugging - allow all authenticated users
    match /users/{userId} {
      // Allow all operations for any authenticated user (temporary for debugging)
      allow read, write: if request.auth != null;
      
      // Users can read and write their own history subcollection
      match /history/{historyId} {
        allow read, write: if request.auth != null;
      }
      
      // Users can read and write their own AI detection subcollection
      match /aiDetections/{detectionId} {
        allow read, write: if request.auth != null;
      }
      
      // Users can read and write their own settings subcollection
      match /settings/{settingsId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Block access to external collections (these shouldn't exist)
    match /history/{historyId} {
      allow read, write: if false; // Block all access
    }
    
    match /aiDetections/{detectionId} {
      allow read, write: if false; // Block all access
    }
  }
}
